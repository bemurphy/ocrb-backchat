<!DOCTYPE html>
<html>
<head>
  <title>Backchat</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js' %>
  <%= javascript_include_tag 'jquery.scrollTo-1.4.2-min' %>
  <%= javascript_include_tag 'http://documentcloud.github.com/underscore/underscore-min.js' %>
  <%= javascript_include_tag 'http://documentcloud.github.com/backbone/backbone-min.js' %>
  <%= javascript_include_tag 'http://js.pusherapp.com/1.8/pusher.min.js' %>

  <%= javascript_include_tag 'chat' %>

  <% if content_for?(:javascript) %>
  <script type="text/javascript">
    <%= yield :javascript %>
  </script>  
  <% end -%>

  <%= csrf_meta_tag %>
</head>
<body>

<%= yield %>

</body>
</html>
